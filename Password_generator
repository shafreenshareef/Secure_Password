import java.util.*;

public class PasswordGenerator {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Build digits using ASCII loop
        StringBuilder digitsBuilder = new StringBuilder();
        for (char c = '0'; c <= '9'; c++) {
            digitsBuilder.append(c);
        }
        String digits = digitsBuilder.toString();

        // Build letters (lowercase + uppercase) using ASCII loop
        StringBuilder lettersBuilder = new StringBuilder();
        for (char c = 'a'; c <= 'z'; c++) {
            lettersBuilder.append(c);
        }
        for (char c = 'A'; c <= 'Z'; c++) {
            lettersBuilder.append(c);
        }
        String letters = lettersBuilder.toString();

        // Special characters (best kept manually defined)
        String specialChars = "!@#$%^&*()-_=+[]{};:,.<>?/|\\`~";

        // Ask user for password length
        System.out.print("Enter password length: ");
        int length = sc.nextInt();

        // Menu for character set selection
        StringBuilder characterList = new StringBuilder();
        while (true) {
            System.out.println("\nChoose character set for password: ");
            System.out.println("1. Digits");
            System.out.println("2. Letters");
            System.out.println("3. Special characters");
            System.out.println("4. Done");
            System.out.print("Pick a number: ");

            int choice = sc.nextInt();
            if (choice == 1) {
                characterList.append(digits);
            } else if (choice == 2) {
                characterList.append(letters);
            } else if (choice == 3) {
                characterList.append(specialChars);
            } else if (choice == 4) {
                break;
            } else {
                System.out.println("Invalid choice, try again!");
            }
        }

        // Ensure something was selected
        if (characterList.length() == 0) {
            System.out.println("No character set selected! Exiting...");
            return;
        }

        // Generate random password
        Random random = new Random();
        StringBuilder password = new StringBuilder();

        for (int i = 0; i < length; i++) {
            int index = random.nextInt(characterList.length());
            password.append(characterList.charAt(index));
        }

        // Output password
        System.out.println("\nGenerated Password: " + password);

        sc.close();
    }
}
